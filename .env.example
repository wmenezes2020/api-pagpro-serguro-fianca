NODE_ENV=development
PORT=3000

DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=pagpro
DATABASE_PASSWORD=pagpro
DATABASE_NAME=pagpro_db
DATABASE_RETRY_ATTEMPTS=5
DATABASE_RETRY_DELAY=2000
DATABASE_CONNECT_TIMEOUT=20000

JWT_ACCESS_TOKEN_SECRET=change-me-access
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_SECRET=change-me-refresh
JWT_REFRESH_TOKEN_TTL=7d

COVERAGE_MULTIPLIER=3
MONTHLY_PREMIUM_RATE=0.15
ADHESION_FEE_RATE=1

CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=documents

# Frontend URL (para links de recuperação de senha)
FRONTEND_URL=http://localhost:3001

# SMTP Configuration (para envio de e-mails de recuperação de senha)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-app
SMTP_FROM_EMAIL=noreply@pagproseguro.com.br
SMTP_FROM_NAME=PagPro Seguro Fiança
NOTIFICATION_EMAIL_TO=

# OpenAI Configuration (opcional - para análise por IA)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
